@using System.Security.Claims
@{
    string email = User.FindFirstValue(ClaimTypes.Email);
}


<div class="form-group row">
    <label for="userInput" class="col-2 col-form-label">User: @email</label>
    <div class="col col-sm-6">
        <input id="userInput" style="display: none;" class="form-control" value="@email" />
    </div>
</div>

<div class="form-group row">
    <label for="message" class="col-2 col-form-label">Message</label>
    <div class="col col-sm-6">
        <input id="messageInput" class="form-control" />
    </div>
</div>

<button id="send" type="button" class="btn btn-primary">Send Message</button>

<hr>

<ul id="messageList"></ul>

@section Scripts
{
    <!-- <snippet_CDN> -->
    <!-- </snippet_CDN> -->
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}